{
  "name": "Discord Notifications",
  "version": "0.0.0-femiwiki",
  "author": "Aleksi Postari",
  "url": "https://github.com/femiwiki/DiscordNotifications",
  "descriptionmsg": "discordnotifications-desc",
  "type": "other",
  "requires": {
    "MediaWiki": ">= 1.35.0"
  },
  "AutoloadNamespaces": {
    "MediaWiki\\Extension\\DiscordNotifications\\": "includes/"
  },
  "MessagesDirs": {
    "DiscordNotifications": ["i18n"]
  },
  "Hooks": {
    "PageSaveComplete": "main",
    "ArticleDeleteComplete": "main",
    "TitleMoveComplete": "main",
    "AddNewAccount": "main",
    "BlockIpComplete": "main",
    "UploadComplete": "main",
    "ArticleProtectComplete": "main",
    "UserGroupsChanged": "main",
    "APIFlowAfterExecute": "MediaWiki\\Extension\\DiscordNotifications\\Hooks::onAPIFlowAfterExecute",
    "AfterImportPage": "main"
  },
  "HookHandlers": {
    "main": {
      "class": "MediaWiki\\Extension\\DiscordNotifications\\Hooks",
      "services": ["MainConfig"]
    }
  },
  "config": {
    "DiscordNotificationsIncomingWebhookUrl": "",
    "DiscordNotificationsFromName": "",
    "DiscordNotificationsSendMethod": "curl",
    "DiscordIncludePageUrls": true,
    "DiscordIncludeUserUrls": true,
    "DiscordIgnoreMinorEdits": false,
    "DiscordExcludeNotificationsFrom": [],
    "DiscordExcludedPermission": "",
    "DiscordNotificationsNewUser": true,
    "DiscordNotificationsBlockedUser": true,
    "DiscordNotificationsAddedArticle": true,
    "DiscordNotificationsRemovedArticle": true,
    "DiscordNotificationsMovedArticle": true,
    "DiscordNotificationsEditedArticle": true,
    "DiscordNotificationsFileUpload": true,
    "DiscordNotificationsProtectedArticle": true,
    "DiscordNotificationsShowSuppressed": true,
    "DiscordNotificationsUserGroupsChanged": true,
    "DiscordNotificationsFlow": true,
    "DiscordNotificationsAfterImportPage": true,
    "DiscordIncludeDiffSize": true,
    "DiscordShowNewUserFullName": false,
    "DiscordNotificationsAvatarUrl": ""
  },
  "TestAutoloadNamespaces": {
    "MediaWiki\\Extension\\DiscordNotifications\\Tests\\Integration\\": "tests/phpunit/integration/",
    "MediaWiki\\Extension\\DiscordNotifications\\Tests\\Unit\\": "tests/phpunit/unit/"
  },
  "manifest_version": 1
}
